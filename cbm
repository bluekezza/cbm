#!/bin/bash
usage () { 
  echo "
Please provide a command
  HOST
  - provision
  - up
  - connect
  - browse
  - halt
  - destroy
  GUEST
  - build
  - start
"
}

#check the first command
if [ $# -eq 0 ] ; then
  usage; exit 1;
fi

command=$1
shift

case $command in
    provision)
      vagrant up
      exit 0;;
    up)
      vagrant up --no-provision
      exit 0;;
    connect)
      vagrant ssh
      exit 0;;
    browse)
      xdg-open "http://localhost:3000/index.html"
      exit 0;;
    halt)
      vagrant halt
      exit 0;;
    destroy)
      vagrant destroy -f
      exit 0;;
    build)
      rm -rf ./build
      mkdir ./build
      cp -vr ./img ./build/img
      cp ./.cabal-sandbox/share/i386-linux-ghc-7.4.1/Elm-0.11/elm-runtime.js ./build/elm-runtime.js 2> /dev/null || cp ~/.cabal/share/Elm-0.11/elm-runtime.js ./build/elm-runtime.js 2> /dev/null 
      elm --make -r "elm-runtime.js" index.elm
      exit 0;;
    start)
      cd ./build
      echo "starting in $(pwd)"
      elm-server --port=3000
      cd ../
      exit 0;;
    help)
      usage; exit;;
    *)
      echo 'Unknown command';
      usage;
      exit;;
esac
